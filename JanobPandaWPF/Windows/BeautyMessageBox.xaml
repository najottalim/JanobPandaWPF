<Window x:Class="JanobPandaWPF.Windows.BeautyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanobPandaWPF.Windows"
        mc:Ignorable="d"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="BeautyMessageBox" Height="150" Width="350"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>

        <TextBlock x:Name="messageTxt" Text="You have confused!" FontSize="14" Margin="10 20 0 0"/>

        <DockPanel HorizontalAlignment="Right" Margin="0 0 20 15" VerticalAlignment="Bottom">
            <Button x:Name="cancelBtn" Click="cancelBtn_Click" Background="White" Cursor="Hand" Foreground="#282C34" BorderThickness="0" Content="Back" Width="100" md:ButtonAssist.CornerRadius="5" md:ShadowAssist.ShadowDepth="Depth5" md:ShadowAssist.Darken="False"/>
            <Button x:Name="OkBtn" Click="OkBtn_Click" Background="White" Cursor="Hand" Foreground="#282C34" BorderThickness="0" Content="Ok" Width="100" md:ButtonAssist.CornerRadius="5" md:ShadowAssist.ShadowDepth="Depth5" HorizontalAlignment="Left" md:ShadowAssist.Darken="False" Margin="15 0 0 0"/>
        </DockPanel>
    </Grid>
</Window>
